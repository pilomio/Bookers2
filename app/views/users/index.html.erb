
  <div class="container">
 <div class="row">
   <div class="col-md-3">


<div class="text-left">
  <h2>User Info</h2>
  <% if user_signed_in? %>
    <%= image_tag current_user.get_profile_image(100, 100) %>
    <p>Name:<%= current_user.name %></p>
    <p>Introduction: <%= current_user.introduction %></p>
     <p><%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "fas fa-user-cog" %></p>
  <% else %>
    <p><%= link_to "プロフィール編集",users_path, class: "fas fa-user-cog" %></p>
    <p>Please sign in to view user info.</p>
  <% end %>


</div>
</div>

<div class="col-md-8.offset-md-1">

<div class="text-left">
  <h2>New book</h2>
  <%= form_with model: @book, url: books_path(@book) do |f| %>
      <p>Title</p>
      <%= f.text_field :title, name: 'book[title]' %>
    <p>Opinion</p>
      <%= f.text_area :body, name: 'book[body]' %>
    <%= f.submit 'Create Book' %>
     <% end %>
  </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-3">

  <div class="text-right">
  <h2>Users</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100, 100) %></td>
          <td><%= user.name %></td>
          <td>
            <p><%= link_to "Show", user_path(user) %></p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

 </div>
 <div class="col-md-8 offset-md-1">

    </div>
  </div>
</div>




